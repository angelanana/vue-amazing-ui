{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "components/*.ts",
    "components/**/*.ts",
    "components/**/*.vue",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],
  "compilerOptions": {
    "removeComments": true,
    "isolatedModules": true,
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "components/*": ["components/*"],
    }
  }
}
